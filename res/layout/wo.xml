<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="top"
   android:background="#fff2f2f2"
    android:orientation="vertical" >

    <LinearLayout
        android:id="@+id/wo_top"
        android:layout_width="match_parent"
        android:layout_height="90dp"
        android:background="#0099ff" >

        <image.SmartImageView
            android:id="@+id/wo_personimage"
            android:layout_marginLeft="20dp"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_gravity="center_vertical"
            android:scaleType="fitXY"
            android:layout_marginRight="20dp"
            android:src="@drawable/zhuyuanzhang"
             />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="8"
            style="@drawable/layer1"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/wo_nickname"
                android:layout_marginTop="15dp"
                android:layout_width="100dp"
                android:layout_height="25dp"
                android:textSize="18dp"
                android:text="小超超又调皮了"
                 />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
              
                android:orientation="horizontal" >

                <TextView
                    android:id="@+id/textView2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:text="个性签名：" />

                <TextView
                    android:id="@+id/wo_personalitysign"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:text="哈哈" />
              
            </LinearLayout>

        </LinearLayout>
        
    </LinearLayout>

    <LinearLayout
        android:id="@+id/wo_personalitylayout"
        android:layout_width="match_parent"
        android:layout_height="70dp"   
        android:orientation="horizontal"
      android:background="@drawable/layer"
        >
           <ImageView
            android:id="@+id/wo_personalitysetimage"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:scaleType="fitXY"
            android:layout_marginLeft="5dp"
            android:layout_gravity="center_vertical"
            android:src="@drawable/wo_personalityset" />

        <TextView
            android:id="@+id/textView4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="10dp"
            android:textSize="16dp"
            android:text="个性设置" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/friendmessagelayout"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:layout_marginTop="45dp"
          android:background="@drawable/layer" >

        <ImageView
            android:id="@+id/wo_friendmessageimage"
            android:scaleType="fitXY"
            android:layout_marginLeft="5dp"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/wo_friendmessage"
            android:layout_gravity="center_vertical" />

        <TextView
            android:id="@+id/textView5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="10dp"
            android:textSize="16dp"
            android:text="好友消息"/>
        
    </LinearLayout>
     <LinearLayout
         android:id="@+id/wo_rankinglayout"
        android:layout_width="match_parent"
        android:layout_height="70dp"
         android:background="@drawable/layer" >

        <ImageView
            android:id="@+id/wo_rankingsimage"
            android:scaleType="fitXY"
            android:layout_marginLeft="5dp"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/wo_ranking"
            android:layout_gravity="center_vertical" />

        <TextView
            android:id="@+id/textView6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="16dp"
             android:layout_gravity="center_vertical"
             android:layout_marginLeft="10dp"
            android:text="排行榜"/>
        
    </LinearLayout>
    <LinearLayout
        android:id="@+id/dreamlayout"
        android:layout_width="match_parent"
        android:layout_height="70dp"
         android:background="@drawable/layer">

        <ImageView
            android:id="@+id/wo_dreamimage"
            android:scaleType="fitXY"
            android:layout_marginLeft="5dp"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/wo_dream"
            android:layout_gravity="center_vertical" />

        <TextView
            android:id="@+id/textView7"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
             android:layout_gravity="center_vertical"
             android:textSize="16dp"
             android:layout_marginLeft="10dp"
            android:text="理想"/>
        
    </LinearLayout>
     <LinearLayout
         android:id="@+id/wo_collectlayout"
        android:layout_width="match_parent"
        android:layout_marginTop="30dp"
        android:layout_height="70dp"
        
          android:background="@drawable/layer" >

        <ImageView
            android:id="@+id/wo_collectimage"
            android:scaleType="fitXY"
            android:layout_marginLeft="5dp"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/wo_collect"
            android:layout_gravity="center_vertical" />

        <TextView
            android:id="@+id/textView8"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
             android:layout_gravity="center_vertical"
             android:layout_marginLeft="10dp"
             android:textSize="16dp"
            android:text="收藏"/>
        
    </LinearLayout>
     <LinearLayout
        android:layout_width="match_parent"
       android:id="@+id/wo_setlayout"
        android:layout_height="70dp"
        android:background="#ffffff" >

        <ImageView
            android:id="@+id/wo_setimage"
            android:scaleType="fitXY"
            android:layout_marginLeft="5dp"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/wo_set"
            android:layout_gravity="center_vertical" />

        <TextView
            android:id="@+id/wo_settext"
            android:textSize="16dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
             android:layout_gravity="center_vertical"
             android:layout_marginLeft="10dp"
            android:text="设置"/>
        
    </LinearLayout>
    
</LinearLayout>