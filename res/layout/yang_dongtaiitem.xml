<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >
    <LinearLayout 
        android:id="@+id/yang_itemtop"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:orientation="horizontal"
        >
        <image.SmartImageView 
            android:id="@+id/yang_dttouxiang"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginLeft="10dp"
                      
            />
        <TextView 
           android:id="@+id/yang_dtname"
            style="@style/mm"
            android:layout_marginLeft="5dp"
            android:gravity="center_vertical"
            android:layout_weight="1"
            android:textColor="#CC9966"
            android:textSize="15sp"
            />
        <TextView
            android:id="@+id/yang_dtdate"
            style="@style/mm"
            android:layout_marginTop="10dp"
            android:gravity="right" 
            android:layout_weight="1"
            android:textSize="12sp"
            android:textColor="#888888"/>

    </LinearLayout>
    <LinearLayout 
        android:id="@+id/yang_dtcontent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="55dp"
        android:background="#f8f8f8"
        android:orientation="vertical"
        android:layout_marginTop="2dp">
        <TextView 
            android:id="@+id/yang_dtneirong"
            style="@style/ww"
            android:layout_weight="4"
            android:gravity="center_horizontal"
            android:textColor="#666666"
            android:textSize="16sp"/>

        <ImageView
            android:id="@+id/yang_dtimg"
            android:layout_width="200dp"
            android:layout_height="100dp"
            android:layout_gravity="left"
             />

    </LinearLayout>
</LinearLayout>
