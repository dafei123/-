<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp" >

        <TextView
            android:id="@+id/reply_username"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp" />

        <TextView
            android:id="@+id/reply_reply_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_alignTop="@id/reply_username"
            android:layout_marginRight="5dp"
            android:text="@string/_reply" />

        <TextView
            android:id="@+id/reply_content"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@id/reply_username"
            android:layout_toLeftOf="@id/reply_reply_text"
            android:layout_toRightOf="@id/reply_username" />
    </RelativeLayout>

    <util.NoScrollListView
        android:id="@+id/reply_reply"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:divider="@null" >
    </util.NoScrollListView>

</LinearLayout>