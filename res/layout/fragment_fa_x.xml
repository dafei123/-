<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#f8f8f8" >

    <LinearLayout
        android:id="@+id/lin1"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="#ff0099ff"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/faxianluntan"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="@string/faxian_text"
            android:textColor="@color/white"
            android:textSize="24sp" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/lin2"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_below="@id/lin1"
        android:background="@drawable/tag_bg"
        android:orientation="horizontal" >

        <LinearLayout
            android:id="@+id/line6"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical">
            <ImageView
                android:id="@+id/fx_imageview1"
                android:layout_width="match_parent"
                android:layout_height="35dp"            
                android:gravity="center"
                android:layout_marginTop="5dp"
                android:src="@drawable/fx_luntan" />
              <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="学霸论坛"
                android:textColor="#666666"
                android:textSize="15sp"
                android:layout_gravity="center|top"/>
        </LinearLayout>
       <LinearLayout 
            android:id="@+id/line5"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            >

        <ImageView
            android:id="@+id/fx_imageview2"
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:layout_marginTop="5dp"
            android:gravity="center"
            android:src="@drawable/fx_sds" />
           <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="搜大神"
                android:textColor="#666666"
                android:textSize="15sp"
                android:layout_gravity="center|top"/>
        </LinearLayout>
    </LinearLayout>

    <android.support.v4.view.ViewPager
        android:id="@+id/fx_container"
        style="@style/ww"
        android:layout_below="@+id/lin2" >
    </android.support.v4.view.ViewPager>
   <ImageView
        android:id="@+id/fx_huabi3"
        android:layout_width="30dp"
        android:layout_height="40dp"
        android:layout_above="@+id/lin2"
        android:layout_alignParentRight="true"
        android:src="@drawable/fx_xie1" />
</RelativeLayout>