<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#fefefe"
    tools:context="com.wo.module.Wo_SetActivity" >

   

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="#0099ff"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/textView1"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:gravity="center"
            android:text="设置"
            android:textSize="20sp"
            android:textStyle="bold" />
    </LinearLayout>
 <View
        android:layout_width="fill_parent"
        android:layout_height="1px"
        android:background="@color/linear" />
    <LinearLayout
        android:id="@+id/wo_set_shuoming"
        style="@style/wo_setlayout"
        android:layout_width="match_parent"
        android:layout_height="60dp"
         >

        <TextView
            android:id="@+id/text"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:layout_marginLeft="10dp"
            android:gravity="center_vertical"
            android:text="功能说明"
            android:textSize="20sp" />
    </LinearLayout>
 <View
        android:layout_width="fill_parent"
        android:layout_height="1px"
        android:background="@color/linear" />
    <LinearLayout
        style="@style/wo_setlayout"
        android:layout_width="match_parent"
        android:layout_height="60dp"
         >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:layout_marginLeft="10dp"
            android:gravity="center"
            android:text="夜间模式"
            android:textSize="20sp" />
    </LinearLayout>
 <View
        android:layout_width="fill_parent"
        android:layout_height="1px"
        android:background="@color/linear" />
    <LinearLayout
        android:id="@+id/wo_set_fankui"
        style="@style/wo_setlayout"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:layout_marginLeft="10dp"
            android:gravity="center"
            android:text="反馈意见"
            android:textSize="20sp" />
    </LinearLayout>
 <View
        android:layout_width="fill_parent"
        android:layout_height="1px"
        android:background="@color/linear" />
    <LinearLayout
        android:id="@+id/wo_set_tongzhi"
        style="@style/wo_setlayout"
        android:layout_width="match_parent"
        android:layout_height="60dp"
       >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:layout_marginLeft="10dp"
            android:gravity="center"
            android:text="系统更新"
            android:textSize="20sp" />
    </LinearLayout>
 <View
        android:layout_width="fill_parent"
        android:layout_height="1px"
        android:background="@color/linear" />
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent" >

        <Button
            android:id="@+id/wo_set_tuichu"
             style="@style/wo_setlayout"
            android:layout_width="140dp"
            android:layout_height="50dp"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:background="#dd0000"
            android:text="退出登录" />

      

    </RelativeLayout>

</LinearLayout>