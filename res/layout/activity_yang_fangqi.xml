<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.gemptc.activities.Yang_fangqiActivity" >

     <LinearLayout 
        android:id="@+id/yang_xuexishibai"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="#fff">
        <LinearLayout 
        android:id="@+id/yang_xuexishibai2"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:orientation="horizontal"
        android:background="#0099ff">
        <TextView 
            android:id="@+id/yang_xuexisbtitle"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="坚持失败"
            android:textSize="20sp"
            android:textColor="#fff"
            android:layout_marginLeft="120dp"
            android:gravity="center_vertical"
            />
        <TextView 
            android:id="@+id/yang_fqwancheng"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="4"
            android:gravity="center_vertical"
            android:layout_marginLeft="15dp"
            android:text="完成"
            android:textSize="17sp"
            android:textColor="#fff"
            />
        </LinearLayout>
        <LinearLayout 
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="0dp"
            android:background="#f8f8f8"
            android:orientation="horizontal"
            >
            <!-- <TextView
                android:id="@+id/yang_finish_tishiyu"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="革命尚未成功，
                      同志仍需努力！"
                  android:background="#f8f8f8"
                  android:textColor="#888888"
                android:textSize="20sp"
                android:gravity="center"
                ></TextView> -->

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="322dp"
                    android:src="@drawable/fangqi" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/yang_fangqibottom"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#f8f8f8"
            android:orientation="vertical" >

            <Button
                android:id="@+id/yang_fqfenxiang"
                android:layout_width="200dp"
                android:layout_height="40dp"
                android:layout_marginTop="25dp"
                android:layout_gravity="center"
                android:background="@drawable/hjl"
                android:text="分享"
                android:textColor="#cc9966"
                android:textSize="30sp" />

        </LinearLayout>

    </LinearLayout>
</RelativeLayout>
